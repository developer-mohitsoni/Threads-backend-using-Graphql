    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.2",
    "prisma": "^6.6.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@prisma/client": "^6.6.0",
    "apollo-server-express": "^3.13.0",
    "body-parser": "^2.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
