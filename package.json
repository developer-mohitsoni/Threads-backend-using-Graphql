    "watch": "tsc -w",
    "serve": "concurrently \"npm run watch\" \"wait-on dist/server.js && nodemon dist/server.js\"",
    "lint": "biome check src",
    "format": "biome check --write src"
  },
  "keywords": [
    "Threads",
    "Graphql"
  ],
  "author": "Mohit Soni",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
